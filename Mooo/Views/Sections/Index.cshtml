@model IEnumerable<Mooo.Models.Section>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Department
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
            <td>
                    <a asp-controller="Employees" asp-action="Create" asp-route-id="@item.Id">Add Employee</a> |
            </td>
        </tr>
}
    </tbody>
</table>
